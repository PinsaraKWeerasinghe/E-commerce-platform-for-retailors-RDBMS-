<head>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
         <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
          <link href="../assets/css/navbar.css" rel="stylesheet" type="text/css">
          <link href="../assets/css/home.css" rel="stylesheet" type="text/css">  
</head>
<body>
   <% include partials/navbar.ejs %>
   <div class="row card bg-light text-dark" style="margin:10vh 10vw;padding:2vh 2vw;text-align: center;height:100%;">
       <div class="card-deck" style='margin-left:10%'>
          <% for(var i=0; i< result.length  ;i++) {%>
              <div class="col-md-8 card" style="padding:1vh;"  >
                      <img class="card-img-top" src="<%=result[0].link %>" >
                      <div class="card-body">
                        <h5 class="card-title"><%=result[i].title %></h5>
                        <p style="font-size: 80%;"card-text"><%=result[0].description %></p>
                        <% for(var i=0; i< variant.length  ;i++) {%>
                            <h5 class="card-title"><%=variant[i].variant %></h5>
                            <p style="font-size: 80%;"card-text"><%=variant[0].varientValue %></p>
                        <%}%>
                        <p style="color:green" class="card-ext"><%=result[0].itemavailability %></p>
                        <p style="color:darkturquoise" class="card-ext">$<%=result[0].price %></p>
                        <a href="/addtocart/<%=result[0].productId%>" class="btn btn-primary">add to cart<i class="fas fa-shopping-cart"></i></a>
                      </div>
              </div>
          <% } %>
      </div>
    </div>





</body>