<head>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
         <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
          <link href="../assets/css/navbar.css" rel="stylesheet" type="text/css">
          <link href="../assets/css/home.css" rel="stylesheet" type="text/css">  
</head>
<body>
   <% include partials/navbar.ejs %>
   <div class="row card bg-light text-dark" style="margin:10vh 10vw;padding:2vh 2vw;text-align: center;height:100%;">
        <!-- search box-->
        <div class="row" style="margin-left:0;margin-top:1vh;background-color:gray;padding-left:10vw;padding-top:1vh;">
        <form class="form-inline">
          <div class="input-group search-box">
            <input type="text" class="form-control" id='key' placeholder="What are you looking for?" aria-label="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="button" id='search'><i class="fas fa-search"></i></button>
            </span>
          </div>
        </form>
      </div>
       <div class="card-deck">
          <% k=0%>
          <% for(var i=0; i<( result.length / 4 )+ 1;i++) {%>
            <% j=0 %>
            <div class="row container" style = 'margin:5px 5px 5px 5px'>
            <% while(j< 4) { %>
              <% if (k==result.length){ break } %>
              
              <div class="col-md-3 card" style="padding:1vh;"  >
                      <img class="card-img-top" src="<%=result[i].link %>" >
                      <div class="card-body">
                        <h5 class="card-title"><%=result[i].title %></h5>
                        <p style="font-size: 80%;"card-text"><%=result[i].description %></p>
                        <p style="color:green" class="card-ext"><%=result[i].itemavailability %></p>
                        <p style="color:darkturquoise" class="card-ext">$<%=result[i].price %></p>
                        <a href="/addtocart/<%=result[i].productId%>" class="btn btn-primary" style='margin-bottom:4px'>add to cart<i class="fas fa-shopping-cart"></i></a>
                        <a onclick="window.open('/product-view/<%=result[i].productId%>')" class="btn btn-primary">View Product</a>
                      </div>
              
              </div>
              <% k++ %>
              <% j++ %>
              
            <% }  %>
            </div>
          <% } %>

          <% if (k==0){%>
              <h3 class="card-title">No matching product found!</h3>
          <%}%>
      </div>
    </div>


<script>
  $('#search').on('click',function(event){ window.location='./'+$('#key').val()});

</script>


</body>